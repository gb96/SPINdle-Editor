<?xml version="1.0" encoding="UTF-8"?>
<project basedir=".">
    <path id="lib.path">
        <fileset dir="${lib}">
            <include name="*.jar"/>
        </fileset>
    </path>
    
    <target name="dist">
        <tstamp>
            <format property="TODAY" pattern="yyyy-MM-dd HH:mm:ss"/>
        </tstamp>
        <jar destfile="${dist}/${proj.name}_${proj.platform}_${version.num}.jar" 
                duplicate="add"
                index="true" filesetmanifest="mergewithoutmain">
            <manifest>
                <attribute name="Main-Class" value="${proj.main}"/>
                <attribute name="Implementation-Version" value="${version.num}"/>
                <attribute name="Built-Date" value="${TODAY}"/>
            </manifest>
            <fileset dir="${classes}"/>
            <zipfileset src="${lib}/${lib.spindle}"/>
            <zipfileset excludes="META-INF/*.SF" src="${lib}/org.eclipse.core.commands_3.6.0.I20100512-1500.jar" />
            <zipfileset excludes="META-INF/*.SF" src="${lib}/org.eclipse.equinox.common_3.6.0.v20100503.jar" />
            <zipfileset excludes="META-INF/*.SF" src="${lib}/org.eclipse.jface_3.6.2.M20110210-1200.jar" />
            <zipfileset excludes="META-INF/*.SF" src="${lib}/org.eclipse.osgi_3.6.2.R36x_v20110210.jar" />
            <zipfileset excludes="META-INF/*.SF" src="${lib}/org.eclipse.swt_3.6.2.v3659c.jar" />
            <zipfileset excludes="META-INF/*.SF" src="${lib}/org.eclipse.swt.win32.win32.x86_64_3.6.2.v3659c.jar" />
            <zipfileset excludes="META-INF/*.SF" src="${lib}/org.eclipse.ui.workbench_3.6.2.M20110210-1200.jar" />
        </jar>
    </target>

    <target name="run" depends="dist">
        <java jar="${dist}/${proj.name}_${proj.platform}_${version.num}.jar" fork="true"/>
<!--
        <java classname="${proj.main}" fork="true" >
            <classpath refid="lib.path"/>
            <classpath>
                <pathelement path="${classes}"/>
            </classpath>
        </java>	
-->
    </target>
</project>
